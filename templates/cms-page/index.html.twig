{% extends 'base.html.twig' %}

{% block title %}{{ page.titolo }}{% endblock %}

{% block body %}
    <div class="container pt-10">
        {% include 'components/breadcrumbs.html.twig' %}
        <h1 class="{{ h1 }} text-center">{{ page.titolo }}</h1>
    </div>

    <div class="container py-10 max-w-4xl">
        <div class="xt-media-container mb-10 xt-ratio-75">
            <div class="xt-media-inner">
                <img class="xt-media object-cover object-center" src="{{ page.immagine.file.url }}" loading="lazy" alt>
            </div>
        </div>

        <div class="{{ p }}">
            {{ rich_text_render(page.descrizione)|raw }}
            {{ rich_text_render(page.descrizioneLunga)|raw }}
        </div>
    </div>

    <div class="container pb-10 max-w-4xl">
        <h2 class="{{ h2 }} mb-5 text-center">Vuoi Saperne di pi√π?</h2>
        <div class="flex justify-center">
            <a href="{{ path('contact_page', {'_fragment': 'test'}) }}" class="xt-button text-xl py-2 px-3.5 rounded-md text-white font-semibold leading-snug tracking-wider uppercase bg-color-1 hover:bg-color-1-dark active:bg-color-1-dark transition">Contattaci</a>
        </div>
    </div>
{% endblock %}