    <div class="container py-12" id="calendario">
        <h2 class="xt-h2 text-center text-5xl mb-12">Calendario</h2>

        <div class="xt-row xt-row-y-6 flex-col items-center">
            {% for i in 0..6 %}
                <div class="flex items-center border-b-2 border-theme-1">
                    <div class="w-1/6 h3 text-4xl uppercase text-center text-theme-3 font-bold">Dom<br/>7</div>
                    <div class="w-5/6 flex flex-col">
                        {% for i in 0..2 %}
                            <div class="flex flex-col mb-3">
                                <div class="text-3xl font-bold">San Martino</div>
                                {% for i in 0..1 %}
                                    <div class="text-2xl">S. Messa â€“ Suffragio Di Luca Giovanni e fam., De Rosa Carmelo e fam., Di Cristo Ciro e fam.</div>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

    <div class="bg-theme-3-light">
        <div class="container py-12">
            <h2 class="xt-h2 text-5xl">Notizie</h2>
            <div class="xt-slider" data-xt-slider>

                <div class="xt-slides">
                    <div class="xt-slides-inner xt-row xt-row-x-8">

                        {% for i in 0..6 %}
                            <div class="xt-slide w-1/4 md:w-1/3 sm:w-1/2 opacity-100 {{ i is same as 2 ? 'in-slider' : '' }}">
                                {% include 'components/card.html.twig' %}
                            </div>
                        {% endfor %}

                    </div>
                </div>

                <nav class="xt-slider-pagination w-full xt-list xt-list-2">
                    <button type="button" class="xt-button text-black bg-gray-200 hover:bg-gray-300 active:bg-gray-400 xt-ignore" data-xt-pag title="Notizia xt-num"></button>
                </nav>

            </div>
        </div>
    </div>
{% endblock %}

