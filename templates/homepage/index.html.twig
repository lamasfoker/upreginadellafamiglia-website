{% extends 'base.html.twig' %}

{% block body %}
    <div class="bg-theme-3-light">
        <div class="container py-10">
            {% include 'components/card.html.twig' %}
        </div>
    </div>

    <div class="container py-10">
        <h2 class="xt-h2 text-center text-4xl mb-10">Calendario</h2>

        <div class="xt-row xt-row-y-6 flex-col items-center">
            {% for i in 0..6 %}
                <div class="flex items-center border-b-2 border-theme-1">
                    <h3 class="w-2/6 xt-h3 text-7xl uppercase text-center text-theme-3">Dom<br/>7</h3>
                    <div class="w-4/6 flex flex-col">
                        {% for i in 0..2 %}
                            <div class="flex flex-col mb-6">
                                <h4 class="xt-h4 text-2xl">San Martino</h4>
                                <div class="text-xl"><span class="font-bold">9:00</span><span class="font-bold mx-2">-</span>S. Messa<span class="font-bold mx-2">-</span>Suffragio Di Luca Giovanni e fam., De Rosa Carmelo e fam., Di Cristo Ciro e fam.</div>
                                <a href="{{ path('news_index', {slug: 'lorem-ipsum'}) }}" title="Vai alla Notizia"  class="group relative">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="group-hover:text-theme-4-light xt-icon xt-icon-md absolute -left-6 bottom-1/3" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" id="ArrowForwardThick"><path d="M22 11l-7-9v5C3.047 7 1.668 16.678 2 22c.502-2.685.735-7 13-7v5l7-9z"/></svg>
                                    <div class="text-xl"><span class="font-bold">9:00</span><span class="font-bold mx-2">-</span>S. Messa<span class="font-bold mx-2">-</span>Suffragio Di Luca Giovanni e fam., De Rosa Carmelo e fam., Di Cristo Ciro e fam.</div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

    <div class="bg-theme-3-light">
        <div class="container py-10">
            <div class="xt-list justify-between">
                <h2 class="xt-h2 text-4xl">Notizie</h2>
                <a href="{{ path('news_listing') }}" class="xt-button text-xl py-2 px-3.5 rounded-md text-theme-1 font-semibold leading-snug tracking-wider uppercase hover:text-theme-1-light active:text-theme-1-light transition">
                    Vedi Tutto
                    <svg xmlns="http://www.w3.org/2000/svg" class="xt-icon text-2xl ml-1"  width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
                </a>
            </div>
            <div class="xt-slider" data-xt-slider="{ wheel: { selector: '.xt-slides-inner', jump: false, loop: false } }">

                <div class="xt-slides">
                    <div class="xt-slides-inner xt-row xt-row-x-8">

                        {% for i in 0..6 %}
                            <div class="xt-slide w-1/4 md:w-1/3 sm:w-1/2 opacity-100 {{ i is same as 2 ? 'in-slider' : '' }}">

                                <a href="{{ path('news_index', {slug: 'lorem-ipsum'}) }}" class="xt-card rounded-md text-black links-default bg-white">
                                    <div class="xt-media-container rounded-t-md xt-ratio-75">
                                        <div class="xt-media-inner">
                                            <img class="xt-media object-cover object-center" src="https://cdn.statically.io/img/upload.wikimedia.org/w=800,h=300/wikipedia/commons/6/66/Chiesa_del_Sacro_Cuore%2C_Livorno.jpg" loading="lazy" alt>
                                        </div>
                                    </div>
                                    <div class="text-base py-6 lg:py-8 px-7 lg:px-9">
                                        <div class="xt-h5 text-xl lg:text-2xl">Lorem ipsum dolor sit amet consectetur adipiscing</div>
                                    </div>
                                </a>

                            </div>
                        {% endfor %}

                    </div>
                </div>

                <nav class="xt-slider-pagination w-full xt-list xt-list-2">
                    <button type="button" class="xt-button text-black bg-gray-200 hover:bg-gray-300 active:bg-gray-400 xt-ignore" data-xt-pag title="Notizia xt-num"></button>
                </nav>

            </div>
        </div>
    </div>
{% endblock %}

