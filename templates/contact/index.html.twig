{% extends 'base.html.twig' %}

{% block title %}{{ title('app.contact_page.title'|trans) }}{% endblock %}

{% block body %}
    <div class="container pt-10">
        {% include 'components/breadcrumbs.html.twig' %}
        <h1 class="{{ h1 }} text-center">{{ 'app.contact_page.h1'|trans }}</h1>
    </div>

    <div class="container max-w-7xl xt-row py-10">
        <div class="w-full md:w-3/6 text-xl lg:text-2xl mb-10">
            <h2 class="{{ h2 }} mb-10">{{ ('app.contact_page.' ~ contactInformation ~ '.label')|trans }}</h2>
            <div class="xt-list xt-list-x-4 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="xt-icon xt-icon-md" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
                <span>
                    {{ ('app.contact_page.' ~ contactInformation ~ '.timetable')|trans|raw }}
                </span>
            </div>
            <a href="https://goo.gl/maps/c1wwWTiJvhaMe82a6" target="_blank" class="no-underline xt-list xt-list-x-4 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="xt-icon xt-icon-md" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                <span>
                    {{ ('app.contact_page.' ~ contactInformation ~ '.address')|trans|raw }}
                </span>
            </a>
            <a href="tel:{{ contacts_info[contactInformation].telephone }}" class="no-underline xt-list xt-list-x-4 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="xt-icon xt-icon-md" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-phone"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                <span>{{ contacts_info[contactInformation].telephone }}</span>
            </a>
            <a href="mailto:{{ contacts_info[contactInformation].email }}" class="no-underline xt-list xt-list-x-4 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="xt-icon xt-icon-md" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                <span>{{ 'app.contact_page.mail'|trans }}</span>
            </a>
        </div>

        {{ form_start(form, {'attr': {'class': 'w-full md:w-3/6 text-xl lg:text-2xl p-10 bg-gray-200 rounded-md'}}) }}
            <div class="xt-row xt-row-x-6 xt-row-y-4">

                <div class="w-full text-red-600">
                    {{ form_errors(form) }}
                    {{ form_errors(form.mail) }}
                </div>

                <div class="w-full">
                    {{ form_label(form.name, 'app.contact_page.name_label', {'label_attr': {'class': 'flex mb-3 text-black text-opacity-75 font-semibold'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'w-full block rounded-md py-2.5 px-4 text-black border border-gray-50 focus:border-gray-500 transition'}}) }}
                </div>

                <div class="w-full">
                    {{ form_label(form.mail, 'app.contact_page.mail_label', {'label_attr': {'class': 'flex mb-3 text-black text-opacity-75 font-semibold'}}) }}
                    {{ form_widget(form.mail, {'attr': {'class': 'w-full block rounded-md py-2.5 px-4 text-black border border-gray-50 focus:border-gray-500 transition'}}) }}
                </div>

                {{ form_widget(form.page) }}

                <div class="w-full">
                    {{ form_label(form.message, 'app.contact_page.message_label', {'label_attr': {'class': 'flex mb-3 text-black text-opacity-75 font-semibold'}}) }}
                    {{ form_widget(form.message, {'attr': {'class': 'w-full block xt-textarea rounded-md py-2.5 px-4 text-black border-gray-50 focus:border-gray-500 transition h-64 resize-vertical'}}) }}
                </div>

                <div class="w-full">
                    <p class="text-base lg:text-lg">{{ 'app.contact_page.recaptcha'|trans|raw }}</p>
                </div>

                <div class="w-full">
                    {{ form_row(form.submit, { 'label': 'app.contact_page.submit' , 'attr': {'class': button}}) }}
                </div>

            </div>
        {{ form_end(form) }}

    </div>
{% endblock %}


