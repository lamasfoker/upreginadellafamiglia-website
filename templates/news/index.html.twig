{% extends 'base.html.twig' %}

{% block title %}{{ title(news.titolo) }}{% endblock %}

{% block body %}
    <div class="container pt-10">
        {% include 'components/breadcrumbs.html.twig' %}
        <h1 class="{{ h1 }} text-center">{{ news.titolo }}</h1>
    </div>

    <div class="container py-10 max-w-4xl">
        <div class="xt-media-container mb-10 xt-ratio-75">
            <div class="xt-media-inner">
                <img class="xt-media object-cover object-center" src="{{ contentful_image_render(news.immagine.file.url) }}" loading="lazy" alt />
            </div>
        </div>

        <div class="{{ p }} mb-10">
            <p>{{ news.sintesi }}</p>
            {{ rich_text_render(news.corpo)|raw }}
        </div>
    </div>

{% endblock %}


